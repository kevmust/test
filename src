		<script type="text/javascript" charset="utf-8">
		
		<!--Enable cross domain-->
		$( document ).on( "mobileinit", function() {
				$.mobile.allowCrossDomainPages = true;
        		$.mobile.ajaxEnabled = true;
       			$.mobile.pushStateEnabled = false;
       		 	$.mobile.allowCrossDomainPages = true;
       		 	$.support.cors = true; 
       	});
		
		</script>
		


		
